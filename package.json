{
  "name": "shibboleth-sp",
  "version": "1.0.2",
  "description": "A nodejs typescript library that provides all service provider functionality for authenticating with a shibboleth IDP",
  "repository": {
    "type": "git",
    "url": "https://github.com/whennemuth/shibboleth-sp.git"
  },
  "scripts": {
    "build": "rm -rf dist/ && node src/build.js",
    "build:tsc": "rm -rf dist/ && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module CommonJS --outdir dist/cjs",
    "pack": "npm run build && npm pack --pack-destination .",
    "publish": "npm run pack && npm publish ./shibboleth-sp-1.0.2.tgz",
    "watch": "tsc -w",
    "test": "jest --silent"
  },
  "module": "dist/esm/index.js",
  "main": "dist/cjs/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@xmldom/xmldom": "^0.8.10",
    "@types/saml2-js": "^3.0.4",
    "jsonwebtoken": "^9.0.2",
    "ms": "^3.0.0-canary.1",
    "saml2-js": "^4.0.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "20.6.3",
    "@types/node-forge": "^1.3.8",
    "esbuild": "^0.25.11",
    "jest": "^29.7.0",
    "node-forge": "^1.3.1",
    "ts-jest": "^29.2.0",
    "ts-node": "^10.9.1",
    "tsx": "^4.21.0",
    "typescript": "~5.2.2"
  }
}
